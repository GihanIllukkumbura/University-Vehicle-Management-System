<!DOCTYPE html>
<html>
<head>
  <title>User Locations Map</title>
  
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }
    h1 {
      text-align: center;
      margin-top: 20px;
    }
    #map {
      height: 600px; /* Set height to 600px */
      width: 100%;
    }
    .header {
            background-color: #007bff;
            padding: 10px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .nav-link {
            text-decoration: none;
            color: white;
            margin-right: 20px;
        }
        .header h1 {
            margin: 0;
        }
        .home-button {
            margin-right: 20px;
     
  </style>
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  
</head>
<body>
  <div class="header">
    <h1>Driver Locations Map</h1>
    <button style="background: none; border: none; padding: 0;">
        <a class="nav-link" href="/">Home</a>
    </button>
</div>
  
  <div id="map"></div>
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>
    var map = L.map('map').setView([7.8731, 80.7718], 7); // Set view to Sri Lanka (latitude, longitude) and zoom level 7
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);
  
    var locations = [
      <% locations.forEach(function(location) { %>
        { lat: <%= location.latitude %>, lng: <%= location.longitude %>, userid: '<%= location.userid %>', username: '<%= location.username %>' },
      <% }); %>
    ];
  
    locations.forEach(function(location) {
      var marker = L.marker([location.lat, location.lng]).addTo(map);
      marker.bindPopup(`Username: ${location.username}<br>UserID: ${location.userid}`);
    });
  </script>
</body>
</html>
